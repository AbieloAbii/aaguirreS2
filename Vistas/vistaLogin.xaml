<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aaguirreS2.Vistas.vistaLogin"
             Title="vistaLogin">
    <VerticalStackLayout Spacing="20" Padding="50">
        
        <Label 
            Text="Ventana Principal"
            HorizontalOptions="Center"
            FontSize="18"
             />
        <Image Source="https://revista.uisrael.edu.ec/images/uisrael.png"
               WidthRequest="300"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
             </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Text="Usuario" FontSize="18" Grid.Row="0" Grid.Column="0"></Label>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario" Grid.Row="0" Grid.Column="1"></Entry>
            <Label Text="Contraseña" FontSize="18" Grid.Row="1" Grid.Column="0"></Label>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese su contraseña" Grid.Row="1" Grid.Column="1"
                   IsPassword="True"></Entry>
        </Grid>
        <Button x:Name="btnIniciar" Text="Iniciar sesion" Clicked="btnIniciar_Clicked"></Button>
        
    </VerticalStackLayout>
</ContentPage>